{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h4 class="mb-5">Добавить новую книгу</h4>
        <div class="col-6">
            <form id="form_add_book" name="form" method="post" enctype="multipart/form-data">
                <label for="titlebook">Название книги</label>
                <input type="text" name="title" class="form-control mb-3" required id="titlebook">
                <label for="author">Автор</label>
                <input type="text" name="author" class="form-control mb-3" required id="author">
                <label for="gernes">Жанр</label>
                <input type="text" name="gernes" class="form-control mb-3" required id="gernes">
                <label for="date_release">Дата выхода книги</label>
                <input type="date" name="date_release" class="form-control mb-3" required id="date_release">
                <label for="date_release">Фото для вашей книги</label>
                <input type="file" name="photo" multiple accept="image/jpeg,image/png,image/jpg">
                <p><small class="text-muted">jpeg,jpg,png</small></p>
                <button class="w-100 mt-3 btn btn-primary btn-lg" type="submit">Опубликовать книгу</button>
            </form>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
        <script src="/js/addbook.js"></script>
{% endblock %}